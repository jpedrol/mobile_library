<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".MenuInicialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_topbar_arredondado"
            android:elevation="4dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:contentDescription="Menu"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_menu" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="@null"
                android:contentDescription="Pesquisar"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_search" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/chipRecomendados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/bg_preto_arredondado"
                    android:elevation="8dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recomendados:"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRecomendados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_section_card"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="14dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="16dp">

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_marginTop="6dp"
                            android:overScrollMode="never"
                            android:scrollbars="none">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/bg_branco_arredondado"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/livro1"/>

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="12dp"
                                    android:background="@drawable/bg_branco_arredondado"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/livro2"/>

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_branco_arredondado"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/livro3"/>
                            </LinearLayout>
                        </HorizontalScrollView>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:id="@+id/pillDots"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/bg_indicador_arredondado"
                                android:elevation="2dp"
                                android:gravity="center_vertical"
                                android:paddingStart="12dp"
                                android:paddingTop="6dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="6dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_marginHorizontal="4dp"
                                        android:src="@drawable/dot_active"/>

                                    <ImageView
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_marginHorizontal="4dp"
                                        android:src="@drawable/dot_inactive"/>

                                    <ImageView
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_marginHorizontal="4dp"
                                        android:src="@drawable/dot_inactive"/>

                                    <ImageView
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_marginHorizontal="4dp"
                                        android:src="@drawable/dot_inactive"/>

                                    <ImageView
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:layout_marginHorizontal="4dp"
                                        android:src="@drawable/dot_inactive"/>
                                </LinearLayout>

                                <ImageButton
                                    android:id="@+id/btnRefreshPill"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="atualizar"
                                    app:srcCompat="@drawable/ic_refresh2"
                                    android:scaleType="centerInside"
                                    android:adjustViewBounds="true"
                                    android:padding="4dp"
                                    app:tint="@android:color/white" />

                            </LinearLayout>

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btnChatbot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="Chatbot"
                                app:backgroundTint="@android:color/white"
                                app:elevation="6dp"
                                app:fabCustomSize="56dp"
                                android:src="@drawable/ic_chatbot2"
                                app:tint="@null" />
                        </RelativeLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_section_card"
                        android:orientation="vertical"
                        android:paddingTop="18dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="12dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lançamento do Livro: A Culpa é das Estrelas"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Data: 25/10/2025 - 15h"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Local: Auditório Principal - UNIFOR"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Descrição: Evento de lançamento do livro com sessão de autógrafos e bate-papo com os autores."
                                android:textColor="@color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#1F000000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lançamento do Livro: 1984"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Data: 28/10/2025 - 19h"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Local: Biblioteca Central"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Descrição: Discussão e mesa-redonda sobre a obra de George Orwell."
                                android:textColor="@color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#1F000000"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="14dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Clube do Livro: O Sol é para Todos"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Data: 02/11/2025 - 18h"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Local: Sala Multiuso - Biblioteca Central"
                                android:textColor="@color/black"
                                android:textSize="13sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Descrição: Encontro do clube para debate do clássico de Harper Lee. Vagas limitadas."
                                android:textColor="@color/black"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/bg_preto_arredondado"
                    android:elevation="8dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eventos:"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvCalendario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Acessar calendário"
                        android:textColor="@color/green"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
