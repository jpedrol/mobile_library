<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOPO -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_topbar_arredondado"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/btnVoltar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/baseline_arrow_back_24"
                android:tint="@android:color/black"
                android:contentDescription="Voltar"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:id="@+id/boxPesquisa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/btnVoltar"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_search_box"
                android:elevation="4dp"
                android:paddingHorizontal="10dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/txtPesquisa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Que livro você está procurando?"
                    android:textColor="@color/black"
                    android:textColorHint="#DADADA"
                    android:paddingStart="8dp"
                    android:background="@null"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/btnSearchRight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:contentDescription="Pesquisar"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_search" />

            </LinearLayout>
        </RelativeLayout>

        <!-- CONTEÚDO -->
        <LinearLayout
            android:id="@+id/contentResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_below="@id/topBar">

            <!-- Texto: resultado -->
            <TextView
                android:id="@+id/tvResultadoPara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultado para: ..."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <!-- CARD LIVRO PRINCIPAL -->
            <LinearLayout
                android:id="@+id/cardPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_search_box">

                <ImageView
                    android:id="@+id/imgLivroPrincipal"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_book_placeholder" />

                <TextView
                    android:id="@+id/tvTituloPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título do livro"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvAutorPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autor do livro"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBaseadoEm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baseado em: ..."
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- TÍTULO DA SEÇÃO RECOMENDADO -->
            <TextView
                android:id="@+id/tvRecomendadoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recomendado para você:"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="20dp" />

            <!-- CARD LIVRO RECOMENDADO -->
            <LinearLayout
                android:id="@+id/cardRecomendado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_search_box">

                <ImageView
                    android:id="@+id/imgLivroRecomendado"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_book_placeholder" />

                <TextView
                    android:id="@+id/tvTituloRecomendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título recomendado"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvAutorRecomendado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autor recomendado"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
