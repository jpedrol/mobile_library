<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroEventoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_titulo_registro_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Novo Evento"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Nome do Evento">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_nome_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Tipo (Ex: Lançamento, Palestra)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_tipo_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Local">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_local_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Data e Hora (Formato: YYYY-MM-DD HH:MM:SS)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_data_hora_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Descrição">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_descricao_evento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_salvar_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Evento"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_excluir_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluir Evento"
            android:backgroundTint="@android:color/holo_red_dark"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
