<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <!-- CONTEÚDO PRINCIPAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TOP BAR -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/bg_topbar_arredondado"
            android:elevation="4dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="12dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:contentDescription="Menu"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_menu" />
        </RelativeLayout>

        <!-- SCROLL PRINCIPAL -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- TÍTULO -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acessibilidade:"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:background="#000000"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp" />

                <!-- CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@android:color/white">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvFontScale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tamanho da fonte:"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <SeekBar
                            android:id="@+id/seekBarFontScale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="20"
                            android:progress="10"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp" />

                        <TextView
                            android:id="@+id/tvFontDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Personalize o tamanho dos textos para facilitar a leitura."
                            android:textSize="13sp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- BOTÃO SALVAR -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salvar"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="14dp"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- MENU LATERAL (SEM CABINES) -->
    <LinearLayout
        android:id="@+id/menuLateral"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu:"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000" />

        <!-- MENU INICIAL -->
        <LinearLayout
            android:id="@+id/itemMenuInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Menu inicial"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000" />

        <!-- ACESSIBILIDADE -->
        <LinearLayout
            android:id="@+id/itemAcessibilidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_accessibility"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Acessibilidade"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000" />

        <!-- SAIR -->
        <LinearLayout
            android:id="@+id/itemSair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Sair"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
