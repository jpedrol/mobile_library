<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_topbar_arredondado"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="@android:color/black"
            android:contentDescription="Voltar"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/boxPesquisa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/btnVoltar"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_box"
            android:elevation="4dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/txtPesquisa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Que livro você está procurando?"
                android:inputType="text"
                android:paddingStart="8dp"
                android:textColor="@color/black"
                android:textColorHint="#DADADA" />

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="Pesquisar"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_search" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>