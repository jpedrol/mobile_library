<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/bg_topbar_arredondado"
        android:elevation="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="@android:color/black"
            android:contentDescription="@string/voltar"/>

        <LinearLayout
            android:id="@+id/boxPesquisa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btnVoltar"
            android:layout_marginStart="0dp"
            android:background="@drawable/bg_search_box"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <EditText
                android:id="@+id/txtPesquisa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/hint_pesquisa"
                android:textColor="@color/black"
                android:textColorHint="#DADADA"
                android:padding="6dp"/>

            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_search"
                android:contentDescription="@string/pesquisar"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/adminCrudContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnAddBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="32dp"
            android:text="@string/adicionar_livro"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/bg_add_button_white"
            android:elevation="4dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerLivros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/adminCrudContainer"
        android:padding="16dp"/>

</RelativeLayout>
